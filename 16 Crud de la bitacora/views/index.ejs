<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Estudiantes</title>
    <link rel="stylesheet" href="/16 Crud de la bitacora/css/style.css">
</head>

<body>
    <h1>Registros</h1>
    <button onclick="abrirModal()">Crear Nuevo Registro</button>
    <ul>
        <% registros.forEach(function(registro) { %>
            <li><strong>
                    <%= registro.Id_equipo %>
                </strong>

                (Fecha y hora del reporte: <%= registro.Fecha_y_hora_reporte %>,
                    Sintoma reportado: <%= registro.Sintoma_reportado %>,
                    Diagnostico: <%= registro.Diagnostico %>,
                    Accion correctiva: <%= registro.Accion_correctiva %>,
                    Piezas remplazadas: <%= registro.Piezas_remplazadas %>,
                    Tiempo de inactividad: <%= registro.Tiempo_de_inactividad %>
                    )
                        <a href="/estudiantes/edit/<%= registro.Id_registro
                 %>">Editar</a>
                        <a href="/estudiantes/delete/<%= registro.Id_registro %>">Eliminar</a>
            </li>
            <% }) ;%>
    </ul>
    <div id="modal" class="modal">
        <div class="modal-contenido">
            <span class="cerrar" onclick="cerrarModal()">&times;</span>

            <h3>Crear Registro</h3>
            <form action="/crearReporte" method="POST">
                <label>Id de equipo</label>
                <input type="text" name="Id_equipo" required placeholder="Ingrese el id del equipo">
                <label>Sintoma reportado</label>
                <input type="text" name="Sintoma_reportado" required placeholder="Ingrese el sintoma reportado">
                <label>Diagnostico</label>
                <input type="text" name="Diagnostico" required placeholder="Ingrese el diagnostico">
                <label>Accion correctiva</label>
                <input type="text" name="Accion_correctiva" required placeholder="Ingrese la accion correctiva">
                <label>Piezas remplazadas</label>
                <p>Nota: Ingrese los datos separados por comas</p>
                <input type="text" name="Piezas_remplazadas" required placeholder="Ingrese las piezas remplazadas ">
                <label>Tiempo de inactividad</label>
                <input type="time" name="Tiempo_de_inactividad" required>

                <!-- Acciones del modal -->
                <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" onclick="cerrarModal()">Cancelar</button>
                </div>

            </form>

        </div>
        <script>
            function mostrarModal() {
                const modal = document.getElementById('modal');
                // Activamos la clase 'show' para animar la caja
                modal.classList.add('show');
            }

            function abrirModal() {
                const modal = document.getElementById('modal');
                // usamos flex para centrar el modal
                modal.style.display = 'flex';
                // Necesitamos una reflow para que la animación funcione cuando cambiamos display
                void modal.offsetWidth;
                mostrarModal();
                // mover foco al primer input para mejorar accesibilidad
                const firstInput = modal.querySelector('input');
                if (firstInput) firstInput.focus();
            }

            function cerrarModal() {
                const modal = document.getElementById('modal');
                modal.classList.remove('show');
                // esperar a que termine la transición y ocultar
                setTimeout(() => {
                    modal.style.display = 'none';
                }, 200);
            }
            function cerrarModalclick() {
                document.getElementById('modal').addEventListener('click', function(event) {
                    if (event.target === this) {
                        cerrarModal();
                    }
                });
            }
            cerrarModalclick();

            // Cerrar con tecla Escape
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    const modal = document.getElementById('modal');
                    // solo cerrar si está visible
                    if (modal && modal.classList.contains('show')) {
                        cerrarModal();
                    }
                }
            });
        </script>
    </div>
</body>

</html>